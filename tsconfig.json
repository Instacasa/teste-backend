{
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,
    "strictBindCallApply": false,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "baseUrl": ".",
    "types": ["node", "jest"],
    "paths": {
      "@controllers": ["src/interfaces/http/controllers"],
      "@controllers/*": ["src/interfaces/http/controllers/*"],
      "@useCases": ["src/useCases"],
      "@useCases/*": ["src/useCases/*"],
      "@serializers": ["src/interfaces/http/serializers"],
      "@serializers/*": ["src/interfaces/http/serializers/*"],
      "@interfacesHttp/*": ["src/interfaces/http/*"],
      "@models": ["src/infra/database/models"],
      "@models/*": ["src/infra/database/models/*"],
      "@repositories": ["src/infra/database/repositories"],
      "@repositories/*": ["src/infra/database/repositories/*"],
      "@domains": ["src/domains"],
      "@domains/*": ["src/domains/*"],
      "@mocks": ["test/mocks"],
      "@mocks/*": ["test/mocks/*"],
      "@errors": ["lib/errors"],
      "@errors/*": ["lib/errors/*"],
      "@apps/*": ["src/app/*"],
      "@libs/*": ["lib/*"],
      "@config": ["config"],
      "@types": ["src/types.ts"],
      "@/*": ["src/*"]
    }
  },
  "lib": ["es6"]
}